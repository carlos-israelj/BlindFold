// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  accountId      String   @unique
  publicKey      String
  novaApiKey     String?  // Encrypted NOVA API key for per-user vault access
  novaAccountId  String?  // NOVA account ID (e.g., username.nova-sdk.near)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  sessions Session[]
  vaults   Vault[]

  @@index([accountId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Vault {
  id           String   @id @default(cuid())
  userId       String
  groupId      String   @unique // NOVA group ID (vault.{accountId})
  novaCid      String? // Latest IPFS CID
  encryptedKey String? // Encrypted vault key (if stored)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  snapshots VaultSnapshot[]

  @@index([userId])
  @@index([groupId])
}

model VaultSnapshot {
  id            String   @id @default(cuid())
  vaultId       String
  novaCid       String // IPFS CID of this snapshot
  portfolioHash String // SHA-256 hash of portfolio data
  timestamp     DateTime @default(now())

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@index([vaultId])
  @@index([timestamp])
}

model RateLimitEntry {
  id        String   @id @default(cuid())
  key       String   @unique // accountId or IP
  count     Int      @default(0)
  windowStart DateTime @default(now())

  @@index([key])
  @@index([windowStart])
}
